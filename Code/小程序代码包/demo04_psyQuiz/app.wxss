/**app.wxss**/
/* 所有页面公共样式 */
/* 1 垂直布局 */
.flexV {
  display: flex;
  flex-direction: column;
}

/* 2 水平布局 */
.flexH {
  display: flex;
  flex-direction: row;
}

/* 3 交叉方向居中 */
.alignCenter {
  align-items: center;
}

/* 4 彩色背景黑字按钮 */
.colorBtn {
  color: black; /* 文字颜色 */
  background-color: #F8CE3A; /* 背景颜色 */
  font-weight: normal; /* 字体不加粗 */
  margin: 30rpx;/* 外边距 */
}

/* 5 整体容器 */
.container {
  /* 宽高尺寸 */
  width: 100%;
  height: 100vh;
  background-color: #f0f0f0; /* 背景颜色 */
}

/* 6 卡片区域 */
.card{
  width: 680rpx;/* 宽度 */
  background-color: white;/* 背景颜色 */
  border-radius: 30rpx;/* 盒子4个角为圆角效果 */
  box-sizing: border-box;/* 盒子宽高包含边框和内边距 */
  margin-top: 30rpx;/* 外边距顶部 */
  padding: 30rpx;/* 内边距 */
  line-height: 60rpx;/* 行间距 */
}

/* 7 滑动容器 */
scroll-view{
  width: 100%;
  height: 100vh;
}
