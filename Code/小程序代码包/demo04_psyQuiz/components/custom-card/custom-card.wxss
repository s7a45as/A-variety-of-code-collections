/* 基础卡片样式 */
.custom-card {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
}

/* 阴影效果 */
.card-shadow {
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

/* 头像区域 */
.avatar-section {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 内容区域 */
.content-section {
  flex: 1;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 元信息 */
.meta-info {
  margin-top: 16rpx;
}

.meta-item {
  display: block;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}