form {
  position: relative;
  z-index: 1;
  margin: 60rpx 0;
  filter: drop-shadow(0 10rpx 20rpx rgba(0,0,0,0.2));
}

/* è¾“å…¥æ¡† */
input {
  height: 100rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 50rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  border: 4rpx solid #fff;
  transition: all 0.3s;
}

input:focus {
  transform: scale(1.02);
  box-shadow: 0 0 30rpx rgba(255,215,0,0.5);
}

