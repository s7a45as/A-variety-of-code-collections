button {
  margin-top: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(45deg, #ff416c, #ff4b2b);
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  position: relative;
  overflow: hidden;
  transition: 0.4s;
}

button::after {
  content: "ğŸ”";
  position: absolute;
  right: 30rpx;
  opacity: 0;
  transition: 0.3s;
}

button:active {
  transform: scale(0.95);
}

button:hover::after {
  opacity: 1;
  right: 40rpx;
}

